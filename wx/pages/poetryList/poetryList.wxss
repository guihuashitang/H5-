/* pages/poetryList.wxss */
.topTitle{
	height: 70rpx;
	line-height: 70rpx;
	justify-content: flex-start;	
}
.topTitle .detail{
	margin-left:10rpx;
}
.topTitle .icon{
	width:6rpx;
	height: 36rpx;
	border-radius:6rpx;	
  
}
.poetryItem{
	margin-top: 10rpx;
	border-radius: 10rpx;
	background-color: rgb(255, 255, 255);
	box-shadow: 0px 2rpx 6rpx 0px rgba(180, 180, 180, 0.29);
  padding: 30rpx 20rpx;
}
.poetryItem:nth-last-child(1){
  margin-bottom: 10rpx;
}
.poetryItem.action{
	background: #f8f8f8;
}
.poetryItem .info{
	flex-grow: 1;
	margin-right: 20rpx;
}
.poetry_title{
  justify-content: flex-start;
  margin-bottom: 6rpx;
}
.nextPage image{
	width: 16rpx;
	height: 25rpx;
}
.bottomStart{
	position: fixed;
	left:0;
	bottom: 0;
	width: 100%;
  height: 133rpx;
  background: #fff;
  box-shadow: 0px 0px 6rpx 2rpx rgba(204, 204, 204, 0.34);
  justify-content: flex-start;
}
.error{
	position: absolute;
	left: 62rpx;
  top: -45rpx;
	width: 120rpx;
  text-align: center;
}
.error.action image{
	transform: scale(1.1);
}
.error image{
	width: 120rpx;
	height: 120rpx;
}
.start{
  background-image: -moz-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  background-image: -webkit-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  background-image: -ms-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  box-shadow: 0px 4px 6px 0px rgba(246, 70, 31, 0.34);
  width: 400rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 40rpx;
  text-align: center;
  margin-left: 286rpx;
}
.start.action{
	background: #fa8b72;
}

.poetryList{
	padding: 0 24rpx;
  padding-bottom: 133rpx;
	box-sizing: border-box;
  background: #f5f5f5;
  height: 100%;
}
.poetryList .item{
	justify-content: space-between;
	padding: 20rpx;
}
