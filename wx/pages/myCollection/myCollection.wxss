/* pages/poetryList.wxss */
.wrap{
	overflow-y:scroll;
	background: #f5f5f5;
}
.topTitle{
	height: 70rpx;
	line-height: 70rpx;
	justify-content: flex-start;	
}
.topTitle .detail{
	margin-left:10rpx;
}
.topTitle .icon{
	width:6rpx;
	height: 36rpx;
	border-radius:6rpx;	
  
}
.poetryItem{
	margin-top: 10rpx;
	border-radius: 10rpx;
	background-color: rgb(255, 255, 255);
	box-shadow: 0px 2rpx 6rpx 0px rgba(180, 180, 180, 0.29);
  	padding: 30rpx 20rpx;
}
.poetryItem .info{
	flex-grow: 1;
	margin-right: 20rpx;
}
.poetry_title{
  justify-content: flex-start;
  margin-bottom: 6rpx;
}
.nextPage image{
	width: 16rpx;
	height: 25rpx;
}
.poetryList-view{
  width: 100%;
  height: 100vh
}
.poetryList{
	padding: 0 24rpx;
	box-sizing: border-box;
  
}
.poetryList:nth-last-of-type(1){
  padding-bottom: 10rpx;
}
.poetryList .item{
	justify-content: space-between;
	padding: 20rpx;
}
.noErrorBg{
	margin-top: 300rpx;
}
.noErrorBg image{
	width: 241rpx;
	height: 250rpx;
}
.noErrorBg text{
	color: #bbb;
}
