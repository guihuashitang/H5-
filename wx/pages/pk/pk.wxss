/* pages/pk/pk.wxss */

page {
  background-color: #f5f5f5;
}

.container {
  padding: 0 54rpx;
    padding-bottom: 20rpx;
  box-sizing: border-box;
}

.top {
  display: flex;
  justify-content: space-around;
  align-items: center;

}

.lower {
  width: 100%;
  height: 222rpx;
  background: #fff;
  border-radius: 15rpx;
  margin-top: -40rpx;
  position: relative;
  display: flex;
  padding-left: 40rpx;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 5rpx 10rpx #e0e0e0
}
.lower.hoverActive{
  background: #f5f5f5;
}
.lower .yellow-bg {
  width: 328rpx;
  font-size: 0;
}

.pk-item {
  width: 53rpx;
  height: 10rpx;
  background: #fcbe32;
}

.field-txt {
  width: 255rpx;
  margin: 30rpx 0 15rpx 0;
}

.grade {
  font-size: 24rpx;
  color: #666;
}

.lower .begin {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  width: 136rpx;
  height: 48rpx;
  border-radius: 5rpx;
  padding: 7rpx;
  box-sizing: border-box;
}

.begin .begin-in {
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 5rpx;
  font-size: 22rpx
}

.yellow-arrow{
  width: 11rpx
}

.color-y{
  color: #fcbe32
}
.color-g{
  color: #34c57f
}
.color-r{
  color: #f5795a
}

.bg-y{
background: #fcbe32
}
.bg-g{
  background: #34c57f
}
.bg-r{
  background: #f5795a
}

.rule{
  width: 100%;
  padding: 50rpx 0 30rpx 0;
  background: #fff;
  margin-top: -30rpx;
  border-radius: 15rpx;  
    box-shadow: 0 5rpx 10rpx #e0e0e0
}

.rule-title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.rule-title:before{
  content: '|';
  width: 10rpx;
  height: 28rpx;
  background: #333;
  margin-right: 20rpx;
  border-radius: 50px;  
}

.rule .rule-content{
  width: 100%;
  padding: 0 40rpx ;
  box-sizing: border-box;

}
.rule-content .list{
  position: relative;
  margin-bottom: 10rpx;
}
.rule-content .list:last-of-type{
  margin-bottom: 0;
}
.rule-content .list .leftIcon{
  position: absolute;
  left:-20rpx;
  top:10rpx;
  border-radius: 50%;
  background-color: rgb(153, 153, 153);
  width: 10rpx;
  height: 10rpx;
}
.rule-content .list .explainText{
  flex-grow: 1;
  font-size: 24rpx;
  color:#aaa;
}
.rule-content .list .explainText text{
  color: #4d8cf0;
}
