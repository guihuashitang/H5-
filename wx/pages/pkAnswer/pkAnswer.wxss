/* pages/pkAnswer/pkAnswer.wxss */
page{
  background: url(http://image.chubanyun.net/images/poetry/pk_bg.png);
  background-size: cover;
  background-repeat: no-repeat;
}

.container{
  padding: 44rpx;
  box-sizing: border-box;
  height: 100vh
}
.userInfo{
  background: #fff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head_img{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 1px solid #999999;
  position: relative;
  overflow: hidden
}
.head_img .pk_head{
  width: 100%;
  height: 100%;
  border-radius: 50%;

}
.head_img .head_mask{
  position: absolute;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  text-align: center;
  color: #fff;
  
}
.pk_name{
  width: 96rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
 text-align: center
}
.grade{
  width: 50%;

}
.grade .time{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #333
}

.grade .timeV{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #fe5936
}
.grade .timeD{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #999999
}
.grade .timeP{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #4e8df1
}


.grade_in .fist_img{
  width: 36rpx;
  position: absolute;
  left: 50%;
  top: -6rpx;
  margin-left: -18rpx;
  transition: left .5s ease-in
}
.ques_txt .null{
  border-bottom: 1px solid #fff;
  width:40rpx;
  height: 40rpx; 
  box-shadow: 0 1px 0 rgba(51,51,51,0.54);
}
.challenger_ed image{
 float: right 
}
.challenger_ed view{
 float: right ;
 clear: both
}
