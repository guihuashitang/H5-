/* pages/errorBook/errorBook.wxss */
.topTitle{
	height: 70rpx;
	line-height: 70rpx;
	justify-content: flex-start;	
}
.topTitle .detail{
	margin-left:10rpx;
}
.topTitle .icon{
	width:6rpx;
	height: 36rpx;
	border-radius:6rpx;	
  
}
.poetryItem{
	margin-top: 10rpx;
	border-radius: 10rpx;
	background-color: rgb(255, 255, 255);
	box-shadow: 0px 2rpx 6rpx 0px rgba(180, 180, 180, 0.29);
  	padding: 30rpx 20rpx;
}
.poetryItem.action{
	background: f8f8f8;
}
.poetryItem image{
	width: 18rpx;
	height: 20rpx;
  margin-left: 10rpx;
}
.poetryItem .poetry_content{
  margin-left: 18rpx;
  flex-grow: 1;
  justify-content: flex-start;
}
.poetryItem .poetry_content .null{
  border-bottom: 1px solid #fff;
  width:40rpx;
  height: 40rpx; 
  box-shadow: 0 1px 0 rgba(51,51,51,0.54);
}
.poetryList{
	padding: 0 24rpx;
  padding-bottom: 20rpx;
	box-sizing: border-box;
  background: #f5f5f5;
  height: 100%;
}
.poetryList .item{
	justify-content: space-between;
	padding: 20rpx;
}
.again{
	 white-space:nowrap;
}
.noErrorBg{
	margin-top: 300rpx;
}
.noErrorBg image{
	width: 241rpx;
	height: 250rpx;
}
.noErrorBg text{
	color: #bbb;
}
