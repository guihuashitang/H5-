.btn .again{
  color:#de6449;
  border:2rpx solid rgb(222, 100, 73);
  width: 266rpx;
  height: 84rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 84rpx;
  box-sizing: border-box;
}
.btn{
  padding: 0 20rpx;
  justify-content: space-between;
  margin-top: 60rpx;
  width: 100%;
  box-sizing: border-box;
}
.btn .share{
  position: relative;
  color:#fff;
  width: 266rpx;
  height: 84rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 84rpx;
  box-sizing: border-box;
  background-image: -webkit-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  box-shadow: 0 4rpx 6rpx rgba(246,70,31,0.34)
}
.btn .share button{
  position: absolute;
  left:0;
  top:0;
  width: 266rpx;
  height: 84rpx;
  opacity: 0;
}
.shareTip{
  
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}
.goPay {
  position: absolute;
  left: 0;
  right:0;
  bottom: -210rpx;
  width: 572rpx;
  height: 612rpx;
  /*z-index:-1;*/
  margin:0 auto;
}
.goPay .goPayBg{
  width:572rpx;
  height: 612rpx;
}
.goPay .explain{
  position: absolute;
  left:0;
  bottom:35rpx;
  width: 100%;
  padding: 0 30rpx 0 40rpx;
  box-sizing: border-box;
}
.goPay .explain .list{
  position: relative;
  align-items: flex-start;
  justify-content: flex-start;
}
.goPay .explain .list:nth-of-type(1){
  margin-bottom: 10rpx;
}
.goPay .explain .list .leftIcon{
  position: absolute;
  left:-20rpx;
  top:10rpx;
  border-radius: 50%;
  background-color: rgb(153, 153, 153);
  width: 10rpx;
  height: 10rpx;
}
.goPay .explain .list .explainText{
  flex-grow: 1;
  font-size: 24rpx;
  color:#666;
}
.goPay .explain .list .explainText text{
  color: #4e8cee;
  text-decoration: underline;
}

