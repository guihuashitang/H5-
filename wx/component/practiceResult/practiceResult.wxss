/* component/practiceResult/practiceResult.wxss */
.flexR{
	display: flex;
    flex-direction: row;
    justify-content:center;
    align-items:center;
}
.flexC{
	display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
}
.result{
  position: relative;
  width: 711rpx;
}
.finish{
  position: absolute;
  left:0;
  top:-119rpx;
  z-index: 99;
  width: 711rpx;
  height: 224rpx;
  line-height: 224rpx;
  background: url('http://image.chubanyun.net/images/poetry/finishBg.png');
  background-size: cover;
  text-align: center;
  color: #fff;
}
.info {
	position: relative;
	z-index: 22;
  border-radius: 50rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 4px 7px 0px rgba(123, 54, 40, 0.23);
  width: 600rpx;
  height: 624rpx;
  margin:0 auto;
  padding-top: 95rpx;
  box-sizing: border-box;
  
}
.user{
  text-align: center;
  position: relative;
}
.user .imageBox{
  border: 2rpx solid rgb(222, 100, 73);
  border-radius: 50%;
  background-color: rgb(255, 255, 255);
  width: 136rpx;
  height: 136rpx;
  margin:0 auto;
}
.user .imageBox image{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}
.user .key{
  position: absolute;
  right:-190rpx;
  top:40rpx;
}
.user .key .keyBox{
  background: #de6449;
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.user .key image{
  width: 25rpx;
  height: 32rpx;
}
.right{
	margin-top: 60rpx;
	font-size: 36rpx;
}
.right text{
	color: #dd6449;
}
