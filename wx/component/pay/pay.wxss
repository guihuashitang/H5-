/* component/pay/pay.wxss */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1001;
}
.flexR{
	display: flex;
    flex-direction: row;
    justify-content:center;
    align-items:center;
}
.flexC{
	display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
}
.box {
	position: relative;
  border-radius: 50rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 4px 7px 0px rgba(123, 54, 40, 0.23);
  width: 600rpx;
  height: 400rpx;
}
.closePay{
	position: absolute;
	right: 0;
	top:0;
	padding: 30rpx;
}
.closePay image{
	
	width: 31rpx;
	height: 31rpx;
}
.payBg{
	width: 344rpx;
	height: 269rpx;
	margin:0 auto;
	margin-top: -162rpx;
}
.showMoney{
  font-size: 28rpx;
  color: #666;
  font-family: "微软雅黑";
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.showMoney .showNumOfMoney{
  font-size: 46rpx;
	line-height: 50rpx;
  font-family: "微软雅黑";
  color:#dd6449;
  padding: 0 5rpx;
}
.loadingTip{
	position: absolute;
	left:0;
	top:-52rpx;
	width:100%;
	text-align: center;
	color:#ccc;
}
.btn{
	justify-content: space-around;
	position: relative;
}
.openAllBook {
  background-image: -moz-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  background-image: -webkit-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  background-image: -ms-linear-gradient( 180deg, rgb(222,100,73) 0%, rgb(255,130,102) 100%);
  box-shadow: 0px 4px 6px 0px rgba(246, 70, 31, 0.34);
  width: 270rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
}

.openAllBook.isPaying{
	background:#ccc;
}
.openAllBook.action{
  background:#fa8b72;
}
.cancle {
  border: 1px solid rgb(153, 153, 153);
	border-radius: 50rpx;
  width: 268rpx;
  height: 82rpx;
  text-align: center;
  line-height: 82rpx;
  color: #999;
}
