/* component/setLike.wxss */
.mask{
	width: 100%;
	height: 100%;
	position: fixed;
	left:0;
	top:0;
	background: rgba(0,0,0,0.3);
	z-index: 99999;
}
.flexR{
	display: flex;
    flex-direction: row;
    justify-content:center;
    align-items:center;
}
.flexC{
	display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
}
.modalBox{
	border-radius: 10rpx;
	background: #78a717;
	color:#fff;
	width: 70%;
	height: 700rpx;
	padding-bottom: 140rpx;
	box-sizing: border-box;
	line-height: 1.5em;
	text-align: center;  
	position: relative;
	overflow: hidden;
}
.detail{
	width: 200%;
	height: 100%;	
	background: #bce34c;
	border-bottom-right-radius:50%;
	border-bottom-left-radius:50%;
	position: relative;
}
.delete{
	position: absolute;
	right: 0;
	top:0;
	padding:15rpx ;
  z-index: 11;
}
.deleteIcon{
	width: 40rpx;
	height: 40rpx;
}
.headimg{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin:0 auto;
}
.nickname{
	margin-top: 10rpx;
	font-size: 26rpx;
	color: #f4f4f4;
}
.content{
	margin-top: 30rpx;
}
.btn{
	padding:20rpx;
	border-radius: 50%;
	background: #fff;
	margin-top: 30rpx;	
	position: absolute;
	bottom:0;
	left:50%;
	margin-left: -50rpx;
	margin-bottom: -50rpx;
}
.liked{
	width: 80rpx;
	height: 80rpx;
}
.btn.action{
	transform: scale(1.2);
}
