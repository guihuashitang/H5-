/* component/stripe/stripe.wxss */
@import '/app.wxss';
.item {
  width: 20rpx;
  height: 80rpx;
}

.stripe {
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
  position: relative;
}

.circle {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  margin-top: -15rpx;
  position: relative
}

.stripe-in {
  position: absolute;
  width: 100%;
  height: 100%;
  background: repeating-linear-gradient(135deg, #dcaf57, #dcaf57 10rpx, #bd9b4a 0, #bd9b4a 20rpx);
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
  z-index: 2
}

.circle-in{
  border: 1px solid #dcdcdc;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  left: -1rpx;
  background: #f0f0f0
}