/* component/loadding/loadding.wxss */
.mask{
	width: 100%;
	height: 100%;
	position: fixed;
	left:0;
	top:0;
	background: rgba(0,0,0,0.3);
	z-index: 99999;
}
.flexR{
	display: flex;
    flex-direction: row;
    justify-content:center;
    align-items:center;
}
.flexC{
	display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
}
.modalBox{
	padding:30rpx 0;
	border-radius: 10rpx;
	color:#fff;
	width: 70%;
	box-sizing: border-box;
	line-height: 1.5em;
	text-align: center;  
}
.content{
	margin-top: 30rpx;
	font-size:30rpx;
}
.headimg{
	width: 200rpx;
	height: 200rpx;
	animation: myfirst 3s linear infinite;
	transform-origin:50% 100%;
}
@keyframes myfirst
{
	0% {
		transform: rotate(0);
	}
	25% {
		transform: rotate(20deg);
	}
	50% {
		transform: rotate(0);
	}
	75% {
		transform: rotate(-20deg);
	}
	100% {
		transform: rotate(0);
	}
}